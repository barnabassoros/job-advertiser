{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["controllers/*"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"],
      "@middleware/*": ["middleware/*"],
      "@type/*": ["types/*"]
    }
  }
}
